<% planet = @planet %>
<% player = planet.game.player %>

<h1><%= planet.name %></h1>
<br><br>
<h3><%= planet.description %></h3>
<br><br>
<div><%= planet.history %></div>
<br><br>
Player credits: <%= planet.game.player.credits %>
<br><br>

<% planet.store.items.each do |name, value| %>
  <% name = name[0, name.length - 6] %>
  <div><%= name %></div>
  <div>Quantity: <span class="<%= name %>-quantity"><%= player.ship.hold.items.where(name: name).length %> </span></div>
  <div>Price: <%= value %> cr.</div><%= link_to "Buy", player_buy_path(planet.game.player, item: "#{name}", price: "#{value}"), remote: true, method: :post %>
  <%= link_to "Sell", player_sell_path(planet.game.player, item: "#{name}", price: "#{value}"), remote: true, method: :post %>
  <br>

  <br>
<% end %>
<br><br>
<%= link_to "Home", game_path(planet.game) %>
<br>
<br>
<%= link_to "Map", game_map_index_path(planet.game) %>


